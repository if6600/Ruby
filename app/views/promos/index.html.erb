<% set_meta_tags title: 'Новости', description: 'Новости' %>
<% set_meta_tags og: {
  title: ['Новости']
} %>
<% if user_signed_in? && current_user.isadmin %>
  <div class="d-flex justify-content-end my-4">
    <%= link_to(icon('fas', 'plus', 'Добавить'), new_promo_path, class: "btn custom_color ms-2 shadow-sm") %>
  </div>
<% end %>

<div class="promo-content">

  <div class="row align-items-md-stretch">
    <% @promos.each_with_index do |item, index| %>
      <% if index == 0 or index == 1 %>
        <div class="col-md-6">
          <div class="jumbotron text-white <% if item.image? %> jumbotron-image <% end %> shadow p-5 rounded-3" <% if item.image? %> style="background-image: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0, 0, 0, 0.55) 100%), url(<%= item.image %>); <% end %>">
            <h1 class="fw-bold mb-5"><%= link_to item.title, promo_path(item) %></h1>
            <div class="position-relative">
            <div class="position-absolute bottom-3 start-0 m-0 tags">
              <% item.tags.each do |tag| %>
                <span> <%= tag %></span>
              <% end %>
            </div>
          </div>
          </div>
        </div>
      <% end %>
      <% end %>
    </div>

    <div class="row row-cols-3 my-5">
      <% @promos.each_with_index do |item, index| %>
        <% if index > 1 %>
          <div class="col">
          <div class="jumbotron shadow p-5 rounded-3">
            <h4 class="fw-bold mb-5"><%= link_to item.title, promo_path(item) %></h4>
            <div class="position-relative">
              <div class="position-absolute bottom-3 start-0 m-0 tags">
                <% item.tags.each do |tag| %>
                  <span class="p-0"> <%= tag %></span>
                <% end %>
              </div>
            </div>
          </div>
          </div>
      <% end %>
    <% end %>
  </div>

</div>