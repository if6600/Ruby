<% if user_signed_in? && current_user.isadmin %>
  <div class="d-flex justify-content-end my-1">
    <%= link_to('Добавить', new_promo_path, class: "btn custom_color ms-2 shadow-sm") %>
  </div>
<% end %>
<% @promos.each_with_index do |item, index| %>
  <% if index == 0 %>
    <div class="p-5 mb-4">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold"><%= item.title %></h1>
        <h4 class="col-md-8"><%= item.content.html_safe %></h4>
        <%= link_to 'Подробнее', promo_path(item), class: "btn custom_color" %>
      </div>
    </div>
    <div class="row align-items-md-stretch">
  <% else %>
    <div class="col">
      <div class="h-100 p-5 bg-light border rounded-3">
        <h2><%= item.title %></h2>
        <p><%= item.content.html_safe %></p>
        <%= link_to 'Подробнее', promo_path(item), class: "btn custom_color" %>
      </div>
    </div>
  <% end %>
<% end %>
</div>