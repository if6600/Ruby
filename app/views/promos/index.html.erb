<% set_meta_tags title: 'Новости', description: 'Новости' %>
<% set_meta_tags og: {
  title: ['Новости']
} %>

<% if user_signed_in? && current_user.isadmin %>
  <div class="d-flex justify-content-end my-4">
    <%= link_to('Добавить', new_promo_path, class: "btn custom_color ms-2 shadow-sm") %>
  </div>
<% end %>
<div class="promo-content">
  <% @promos.each_with_index do |item, index| %>
    <% if index == 0 %>

      <% if item.image? %>
        <div class="jumbotron text-white jumbotron-image shadow p-5 rounded-3" style="background-image: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0, 0, 0, 0.55) 100%), url(<%= item.image %>);">
      <% else %>
        <div class="jumbotron shadow p-5 rounded-3">
      <% end %>

      <h1 class="display-5 fw-bold"><%= link_to item.title, promo_path(item) %></h1>
      <p class="col-md-8"><%= item.content.html_safe %></p>
      </div>
      <div class="position-relative">
        <div class="position-absolute bottom-0 start-0 m-2 tags">
          <% item.tags.each do |tag| %>
            <span> <%= tag %></span>
          <% end %>
        </div>
      </div>

      <div class="row align-items-md-stretch">
    <% else %>
      <div class="col mt-5">
        <% if item.image? %>
          <div class="jumbotron text-white jumbotron-image shadow rounded-3" style="background-image: url(<%= item.image %>);">
        <% else %>
          <div class="jumbotron shadow p-5 rounded-3">
        <% end %>
        <div class="h-100 p-5">
          <h2><%= link_to item.title, promo_path(item) %></h2>
          <p><%= item.content.html_safe %></p>
        </div>
        <div class="position-relative">
          <div class="position-absolute bottom-0 start-0 m-2 tags">
            <% item.tags.each do |tag| %>
              <span> <%= tag %></span>
            <% end %>
          </div>
        </div>
        </div>
        </div>
    <% end %>
  <% end %>
  </div>
  </div>