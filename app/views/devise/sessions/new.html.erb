<main class="form-signin">
<div class="text-center">
<h2 class="h3 mb-3 fw-normal">Вход</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, class: "form-control border_color rounded", autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "form-control border_color rounded", autocomplete: "current-password", placeholder: "Пароль" %>
  </div>

<div class="checkbox mb-3">
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, type: "checkbox", value: "remember-me" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Войти", class: "w-100 btn btn-lg btn-primary rounded-pill custom_color", type:"submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</main>
</div>
