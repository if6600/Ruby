<main class="form-signin">
  <div class="text-center">
    <h2 class="h3 mb-3 fw-normal">Вход</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, class: "form-control border_color rounded", autofocus: true, autocomplete: "email", placeholder: "Email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: "form-control border_color rounded", autocomplete: "current-password", placeholder: "Пароль" %>
      </div>

      <div class="checkbox mb-3">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me, type: "checkbox", value: "remember-me" %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>

      <div class="actions">
        <%= f.submit "Войти", class: "w-100 btn btn-lg btn-primary custom_color", type:"submit" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</main>

<br>
<div class="text-end">
  <img src="/images/вход.png" alt="" class="img-fluid me-20" width="400" height="400">
</div>
