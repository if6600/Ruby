<main class="form-signin">
  <div class="text-center">
    <h2 class="h3 mb-3 fw-normal">Забыли пароль?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border_color", placeholder: "Email" %>
      </div>

      <div class="actions">
        <%= f.submit "Прислать код", class: "w-100 btn btn-lg btn-primary custom_color", type:"submit"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>
