<% set_meta_tags title: 'Регистрация', description: 'Регистрация' %>
<% set_meta_tags og: {
  title: ['Регистрация']
} %>

<div class="form-signin text-center">
  <h2 class="h3 mb-3 fw-normal">Регистрация</h2>

  <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, class: "form-control border_color rounded", autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.text_field :username, class: "form-control border_color rounded", placeholder: "Никнейм" %>
    </div>

    <div class="field">
      <%= f.password_field :password, class: "form-control border_color rounded", autocomplete: "new-password", placeholder: "Пароль (не меньше 6 символов)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, class: "form-control border_color rounded", autocomplete: "new-password", placeholder: "Подтвердить пароль" %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегестрироваться", class: "w-100 btn btn-lg btn-primary custom_color", type: "submit" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>

<div class="text-start">
  <%= image_tag "registration.png", size: "400x400", class: "img-fluid me-20" %>
</div>
