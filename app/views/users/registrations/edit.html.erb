<% set_meta_tags title: 'Изменить пользователя', description: 'Изменить пользователя' %>

<h2>Изменить пользователя</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control border_color rounded", autofocus: true, autocomplete: "email" %>
  </div>
  <div class="field">
    <%= f.label :username, "Никнейм" %>
    <%= f.text_field :username, class: "form-control border_color rounded", placeholder: "Никнейм" %>
  </div>
  <div class="field">
    <%= f.label :image, "Аватар" %>
    <%= f.file_field :image, class: "form-control border_color rounded" %>
  </div>

  <div class="field">
    <%= f.label :password, "Пароль"%> <i>(не заполняйте, если не хотите изменять пароль)</i>
    <%= f.password_field :password, class: "form-control border_color rounded", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <em>минимум <%= @minimum_password_length %> знаков</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Подтверждение пароля" %>
    <%= f.password_field :password_confirmation, class: "form-control border_color rounded", autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Ваш текущий пароль" %>
    <%= f.password_field :current_password, class: "form-control border_color rounded", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Обновить", class: "btn btn-lg btn-primary custom_color" %>
  </div>
<% end %>
