<p id="notice"><%= notice %></p>

<h1>Категории</h1>

<table>
  <thead>
  <tr>
    <th>Название</th>
    <th>Заметка</th>
    <th>Отобразить в меню</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.description %></td>
      <td><%= category.display_in_navbar %></td>
      <td><%= link_to 'Показать', category %></td>
      <% if user_signed_in? %>
        <% if current_user.isadmin %>
          <td><%= link_to 'Изменить', edit_category_path(category) %></td>
          <td><%= link_to 'Удалить', category, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <% end %>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <% if current_user.isadmin %>
    <%= link_to 'Новая категория', new_category_path %>
  <% end %>
<% end %>
