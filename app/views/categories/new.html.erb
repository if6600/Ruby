<% set_meta_tags title: @action + ' категорию', description: 'Категории' %>

<div class="form-signin">
  <h1 class="h3 mb-3 fw-normal text-center"><%= @action %> категорию</h1>
  <%= form_with(model: @category) do |form| %>
    <div class="field">
      <%= form.text_field :name, class: "form-control border_color mb-1", placeholder: "Название" %>
    </div>
    <div class="field">
      <%= form.text_field :description, class: "form-control border_color mb-1", placeholder: "Заметка" %>
    </div>
    <div class="field">
      <%= form.label :display_in_navbar, "Показать в меню?" %>
      <%= form.check_box :display_in_navbar, type: "checkbox" %>
    </div>

    <div class="actions">
      <%= form.submit @action, class: "btn btn-lg btn-primary custom_color" %>
      <%= link_to 'Вернуться', :back, class: "btn btn-lg btn-primary custom_color" %>
    </div>
  <% end %>

</div>
