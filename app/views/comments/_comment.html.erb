<% user = User.find(comment.user_id)%>
<div class="card p-3 mt-2 comment">
  <div class="d-flex justify-content-between align-items-center">
    <div class="user d-flex flex-row align-items-center">
      <%= image_tag(avatar_for(user), width: "50", class: "user-img rounded me-2") %>
      <span>
        <small class="font-weight-bold text-primary">
          <%= link_to(user.email.to_s, user_path(user.id), class: "text-dark") %>:
        </small>
        <small><%= comment.body.html_safe %></small>
      </span>
    </div>
    <!--    <small>3 days ago</small>-->
  </div>
  <div class="action d-flex justify-content-between mt-2 align-items-center">
    <div class="reply">
      <% if user_signed_in? %>
        <% if current_user.id == comment.user_id or current_user.isadmin %>
          <small> <%= button_to("Удалить", [comment.post, comment], class: "link-btn", method: :delete)%></small>
        <% end %>
      <% end %>
    </div>
    <div class="icons align-items-center"><i class="fa fa-check-circle-o check-icon text-primary"></i></div>
  </div>
</div>